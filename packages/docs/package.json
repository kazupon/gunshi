{
  "name": "@gunshi/docs",
  "description": "Documentation for gunshi",
  "version": "0.27.0-beta.3",
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/gunshi.git",
    "directory": "packages/docs"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm run build:typedoc && pnpm run build:readme && pnpm run build:vitepress",
    "build:typedoc": "typedoc --excludeInternal",
    "build:readme": "pnpm run generate",
    "build:vitepress": "vitepress build src",
    "generate": "node ./scripts/generate.ts",
    "dev": "pnpm run build:typedoc && pnpm run dev:vitepress",
    "dev:vitepress": "vitepress dev src",
    "preview": "vitepress preview src"
  },
  "files": [
    "README.md",
    "src/api/context",
    "src/api/default",
    "src/api/definition",
    "src/api/generator",
    "src/api/plugin",
    "src/api/renderer",
    "src/guide",
    "src/release",
    "src/index.md",
    "src/showcase.md"
  ],
  "devDependencies": {
    "@vueuse/core": "^14.0.0",
    "mermaid": "^11.12.0",
    "oxc-minify": "^0.97.0",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typedoc-vitepress-theme": "^1.1.2",
    "vitepress": "^2.0.0-alpha.12",
    "vitepress-plugin-group-icons": "^1.5.5",
    "vitepress-plugin-llms": "^1.3.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.14"
  }
}
